 });

 tracksList.appendChild(trackItem);

 trackIndex++;

 });

 // Update track count

 if (tracksCount) {

 const totalTracks = currentTracks + audioFiles.length;

 tracksCount.textContent = `${totalTracks} pistes`;

 }

 }

 // Function to play local audio track

 function playLocalAudioTrack(audioUrl, trackTitle) {

 // Remove existing player if any

 const existingPlayer = document.getElementById('soundcloudFloatingPlayer');

 if (existingPlayer) {

 existingPlayer.remove();

 }

 // Create floating audio player

 const playerContainer = document.createElement('div');

 playerContainer.id = 'soundcloudFloatingPlayer';

 playerContainer.style.cssText = `

 position: fixed;

 bottom: 20px;

 right: 20px;

 width: 350px;

 background: rgba(0, 0, 0, 0.95);

 border: 2px solid #d32f2f;

 border-radius: 15px;

 padding: 20px;

 z-index: 10000;

 box-shadow: 0 10px 40px rgba(211, 47, 47, 0.5);

 `;

 const closeBtn = document.createElement('button');

 closeBtn.textContent = '✕';

 closeBtn.style.cssText = `

 position: absolute;

 top: 10px;

 right: 10px;

 background: transparent;

 border: none;

 color: #fff;

 font-size: 20px;

 cursor: pointer;

 width: 30px;

 height: 30px;

 display: flex;

 align-items: center;

 justify-content: center;

 border-radius: 50%;

 transition: all 0.3s;

 `;

 closeBtn.addEventListener('click', () => {

 playerContainer.remove();

 });

 closeBtn.addEventListener('mouseenter', () => {

 closeBtn.style.background = '#d32f2f';

 });

 closeBtn.addEventListener('mouseleave', () => {

 closeBtn.style.background = 'transparent';

 });

 const titleElement = document.createElement('div');

 titleElement.textContent = trackTitle;

 titleElement.style.cssText = `

 color: #fff;

 font-size: 14px;

 font-weight: 600;

 margin-bottom: 15px;

 text-align: center;

 `;

 const audioElement = document.createElement('audio');

 audioElement.src = audioUrl;

 audioElement.controls = true;

 audioElement.style.cssText = `

 width: 100%;

 margin-top: 10px;

 `;

 audioElement.autoplay = true;

 playerContainer.appendChild(closeBtn);

 playerContainer.appendChild(titleElement);

 playerContainer.appendChild(audioElement);

 document.body.appendChild(playerContainer);

 }

 // Function to play SoundCloud track

 function playSoundCloudTrack(trackUrl, trackTitle) {

 // Remove existing player if any

 const existingPlayer = document.getElementById('soundcloudFloatingPlayer');

 if (existingPlayer) {

 existingPlayer.remove();

 }

 // Create floating SoundCloud player

 const playerContainer = document.createElement('div');

 playerContainer.id = 'soundcloudFloatingPlayer';

 playerContainer.style.cssText = `

 position: fixed;

 bottom: 20px;

 right: 20px;

 width: 350px;

 background: rgba(0, 0, 0, 0.95);

 border: 2px solid #d32f2f;

 border-radius: 15px;

 padding: 20px;

 z-index: 10000;

 box-shadow: 0 10px 40px rgba(211, 47, 47, 0.5);

 `;

 const closeBtn = document.createElement('button');

 closeBtn.textContent = '✕';

 closeBtn.style.cssText = `

 position: absolute;

 top: 10px;

 right: 10px;

 background: rgba(211, 47, 47, 0.3);

 border: 1px solid #d32f2f;

 color: #fff;

 width: 30px;

 height: 30px;

 border-radius: 50%;

 cursor: pointer;

 font-size: 1.2rem;

 `;

 closeBtn.addEventListener('click', () => playerContainer.remove());

 const titleDiv = document.createElement('div');

 titleDiv.textContent = trackTitle;

 titleDiv.style.cssText = `

 color: #ff5722;

 font-weight: 600;

 margin-bottom: 15px;

 font-size: 1.1rem;

 `;

 const iframe = document.createElement('iframe');

 iframe.width = '100%';

 iframe.height = '166';

 iframe.scrolling = 'no';

 iframe.frameBorder = 'no';

 iframe.allow = 'autoplay';

 iframe.src = `https://w.soundcloud.com/player/?url=${encodeURIComponent(trackUrl)}&color=%23ff5722&auto_play=true&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=false`;

 iframe.style.borderRadius = '10px';

 playerContainer.appendChild(closeBtn);

 playerContainer.appendChild(titleDiv);

 playerContainer.appendChild(iframe);

 document.body.appendChild(playerContainer);

 }

 </script>

 <script>
 // Contact Form Handler
 document.addEventListener('DOMContentLoaded', function() {
 const contactForm = document.getElementById('contactForm');
 const formMessage = document.getElementById('formMessage');

 if (contactForm) {
 contactForm.addEventListener('submit', function(e) {
 // Reset form state
 const formGroups = contactForm.querySelectorAll('.form-group');
 formGroups.forEach(group => {
 group.classList.remove('error');
 });
 if (formMessage) {
 formMessage.className = 'form-message';
 formMessage.textContent = '';
 }

 // Get form values with null checks
 const firstNameInput = document.getElementById('firstName');
 const lastNameInput = document.getElementById('lastName');
 const emailInput = document.getElementById('email');
 const serviceTypeInput = document.getElementById('serviceType');
 const messageInput = document.getElementById('message');

 if (!firstNameInput || !lastNameInput || !emailInput || !serviceTypeInput || !messageInput) {
 e.preventDefault();
 if (formMessage) {
 formMessage.className = 'form-message error';
 formMessage.textContent = 'Erreur : Formulaire incomplet. Veuillez rafraîchir la page.';
 formMessage.style.display = 'block';
 }
 return;
 }

 const firstName = firstNameInput.value.trim();
 const lastName = lastNameInput.value.trim();
 const email = emailInput.value.trim();
 const serviceType = serviceTypeInput.value;
 const message = messageInput.value.trim();

 // Validation
 let isValid = true;

 if (!firstName) {
 showError('firstName', 'Veuillez entrer votre prénom');
 isValid = false;
 }

 if (!lastName) {
 showError('lastName', 'Veuillez entrer votre nom');
 isValid = false;
 }

 if (!email || !isValidEmailStrict(email)) {
 showError('email', 'Veuillez entrer une adresse email valide');
 isValid = false;
 }

 if (!serviceType) {
 showError('serviceType', 'Veuillez sélectionner un type de service');
 isValid = false;
 }

 if (!message || message.length < 10) {
 showError('message', 'Veuillez entrer un message d\'au moins 10 caractères');
 isValid = false;
 }

 if (!isValid) {
 e.preventDefault();
 if (formMessage) {
 formMessage.className = 'form-message error';
 formMessage.textContent = 'Veuillez corriger les erreurs dans le formulaire';
 formMessage.style.display = 'block';
 }
 return;
 }

 // Préparer les champs cachés pour Web3Forms
 const fromNameField = document.getElementById('from_name');
 if (fromNameField) {
 fromNameField.value = `${firstName} ${lastName}`;
 }

 // Mettre à jour le sujet avec le type de service
 const subjectField = contactForm.querySelector('input[name="subject"]');
 if (subjectField) {
 subjectField.value = `Nouveau message depuis djshekofficiel.com - ${getServiceTypeLabel(serviceType)}`;
 }

 // Ajouter le type de service et les infos dans le message
 const messageField = document.getElementById('message');
 if (messageField) {
 const fullMessage = `Type de demande : ${getServiceTypeLabel(serviceType)}\n\n${message}`;
 messageField.value = fullMessage;
 }

 // Afficher message de chargement
 if (formMessage) {
 formMessage.className = 'form-message';
 formMessage.textContent = '⏳ Envoi en cours...';
 formMessage.style.display = 'block';
 }

 // Laisser le formulaire se soumettre normalement (HTML direct vers Web3Forms)
 // Le formulaire va rediriger vers Web3Forms qui affichera une page de confirmation
 // On intercepte la réponse pour afficher notre propre message
 
 // Intercepter la soumission pour gérer la réponse
 e.preventDefault();
 
 // Créer un FormData pour l'envoi
 const formData = new FormData(contactForm);
 formData.append('name', `${firstName} ${lastName}`);
 
 fetch('https://api.web3forms.com/submit', {
 method: 'POST',
 body: formData
 })
 .then(response => response.json())
 .then(data => {
 if (data.success) {
 // Succès - Email envoyé directement
 if (formMessage) {
 formMessage.className = 'form-message success';
 formMessage.textContent = '✅ Votre message a été envoyé avec succès à djshekofficiel@gmail.com ! Je vous répondrai dans les plus brefs délais.';
 formMessage.style.display = 'block';
 }
 
 // Réinitialiser le formulaire
 contactForm.reset();
 
 // Masquer le message après 5 secondes
 setTimeout(() => {
 if (formMessage) {
 formMessage.style.display = 'none';
 }
 }, 5000);
 } else {
 throw new Error(data.message || 'Erreur lors de l\'envoi');
 }
 })
 .catch(error => {
 // Erreur - Fallback vers mailto
 console.error('Erreur envoi email:', error);
 
 const emailSubject = encodeURIComponent(`Demande de contact - ${getServiceTypeLabel(serviceType)}`);
 const emailBody = encodeURIComponent(
 `Bonjour DJ SHEK,\n\n` +
 `Je vous contacte concernant : ${getServiceTypeLabel(serviceType)}\n\n` +
 `Nom : ${firstName} ${lastName}\n` +
 `Email : ${email}\n\n` +
 `Message :\n${message}\n\n` +
 `Cordialement,\n${firstName} ${lastName}`
 );
 const mailtoLink = `mailto:djshekofficiel@gmail.com?subject=${emailSubject}&body=${emailBody}`;
 window.location.href = mailtoLink;

 if (formMessage) {
 formMessage.className = 'form-message';
 formMessage.textContent = '⚠️ Envoi direct échoué. Votre client de messagerie va s\'ouvrir.';
 formMessage.style.display = 'block';
 }
 });

 // Scroll to message
 if (formMessage) {
 formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
 }
 });

 // Real-time validation
 const inputs = contactForm.querySelectorAll('input, select, textarea');
 inputs.forEach(input => {
 input.addEventListener('blur', function() {
 validateField(this);
 });

 input.addEventListener('input', function() {
 if (this.classList.contains('error')) {
 validateField(this);
 }
 });
 });
 }

 function showError(fieldId, message) {
 const field = document.getElementById(fieldId);
 if (field) {
 const formGroup = field.closest('.form-group');
 formGroup.classList.add('error');
 const errorSpan = formGroup.querySelector('.error-message');
 if (errorSpan) {
 errorSpan.textContent = message;
 }
 }
 }

 function validateField(field) {
 const formGroup = field.closest('.form-group');
 const value = field.value.trim();
 let isValid = true;
 let errorMessage = '';

 if (field.hasAttribute('required') && !value) {
 isValid = false;
 errorMessage = 'Ce champ est obligatoire';
 } else if (field.type === 'email' && value && !isValidEmail(value)) {
 isValid = false;
 errorMessage = 'Veuillez entrer une adresse email valide';
 } else if (field.id === 'message' && value && value.length < 10) {
 isValid = false;
 errorMessage = 'Le message doit contenir au moins 10 caractères';
 }

 if (isValid) {
 formGroup.classList.remove('error');
 } else {
 formGroup.classList.add('error');
 const errorSpan = formGroup.querySelector('.error-message');
 if (errorSpan) {
 errorSpan.textContent = errorMessage;
 }
 }
 }

 function isValidEmail(email) {
 // Utiliser la validation stricte
 return isValidEmailStrict(email);
 }

 function getServiceTypeLabel(value) {
 const labels = {
 'ghost-remix': 'Ghost Remix',
 'production': 'Production musicale',
 'mashup': 'Mashup',
 'intro': 'Intro pour événement',
 'projet-personnalise': 'Projet audio personnalisé',
 'devis': 'Demande de devis',
 'autre': 'Autre'
 };
 return labels[value] || value;
 }
 });

 // Load Partenaires Images
 function loadPartenaires() {
 const partenairesGrid = document.getElementById('partenairesGrid');
 if (!partenairesGrid) return;

 // Liste des images de partenaires trouvées dans le dossier avec leurs liens associés
 const partenairesImages = [
 { image: 'hjhjhj.png', link: 'https://www.instagram.com/redcords_studio/' },
 { image: 'images.png', link: 'https://www.instagram.com/pef_mma/?hl=fr' },
 { image: 'IMG_1073.JPG', link: 'https://www.instagram.com/mezzalille/?hl=fr' },
 { image: 'téléchargement.jpeg', link: 'https://www.le-maya-restaurant.fr/' },
 { image: 'téléchargement.png', link: 'https://www.instagram.com/zooclubofficiel/?hl=fr' },
 { image: 'ggggh.png', link: 'https://www.instagram.com/nab.store.official/' }
 ];

 // Vider la grille
 // Vider la grille de manière sécurisée
 while (partenairesGrid.firstChild) {
 partenairesGrid.removeChild(partenairesGrid.firstChild);
 }

 // Charger toutes les images
 partenairesImages.forEach((partenaire, index) => {
 const imageName = typeof partenaire === 'string' ? partenaire : partenaire.image;
 const link = typeof partenaire === 'string' ? null : partenaire.link;
 
 const partenaireItem = document.createElement('div');
 partenaireItem.className = 'partenaire-item';
 
 // Créer un lien si un lien est fourni
 if (link) {
 const linkElement = document.createElement('a');
 linkElement.href = link;
 linkElement.target = '_blank';
 linkElement.rel = 'noopener noreferrer';
 linkElement.style.textDecoration = 'none';
 linkElement.style.display = 'block';
 linkElement.style.width = '100%';
 linkElement.style.height = '100%';
 
 const img = document.createElement('img');
 img.src = `images/partenaire/${encodeURIComponent(imageName)}`;
 // Alt text optimisé SEO avec nom du partenaire
 const partnerName = imageName.replace(/\.(png|jpg|jpeg|JPG|PNG|JPEG)$/i, '').replace(/_/g, ' ').replace(/\./g, ' ');
 img.alt = `Partenaire Djshek - ${partnerName} - Collaboration DJ professionnel`;
 img.loading = 'lazy';
 
 // Gestion des erreurs de chargement
 img.onerror = function() {
 console.warn(`Image non trouvée: ${imageName}`);
 this.style.display = 'none';
 };
 
 img.onload = function() {
 // S'assurer que l'image est bien chargée
 this.style.opacity = '1';
 };
 
 linkElement.appendChild(img);
 partenaireItem.appendChild(linkElement);
 } else {
 // Pas de lien, juste l'image
 const img = document.createElement('img');
 img.src = `images/partenaire/${encodeURIComponent(imageName)}`;
 // Alt text optimisé SEO avec nom du partenaire
 const partnerName = imageName.replace(/\.(png|jpg|jpeg|JPG|PNG|JPEG)$/i, '').replace(/_/g, ' ').replace(/\./g, ' ');
 img.alt = `Partenaire Djshek - ${partnerName} - Collaboration DJ professionnel`;
 img.loading = 'lazy';
 
 // Gestion des erreurs de chargement
 img.onerror = function() {
 console.warn(`Image non trouvée: ${imageName}`);
 this.style.display = 'none';
 };
 
 img.onload = function() {
 // S'assurer que l'image est bien chargée
 this.style.opacity = '1';
 };
 
 partenaireItem.appendChild(img);
 }
 
 partenairesGrid.appendChild(partenaireItem);
 });

 // Si aucune image n'a été chargée, afficher un message
 if (partenairesImages.length === 0) {
 partenairesGrid.innerHTML = '<p style="text-align: center; color: rgba(255,255,255,0.5); grid-column: 1 / -1; padding: 2rem;">Aucune image de partenaire pour le moment. Ajoutez vos images dans le dossier images/partenaire/</p>';
 }
 }

 // Charger les partenaires au chargement de la page
 window.addEventListener('DOMContentLoaded', function() {
 loadPartenaires();
 });

 // ============================================
 // SYSTÈME DE COMPTEUR DISCRET
 // ============================================

 // Fonction pour obtenir ou initialiser les statistiques
 function getStats() {
 const stats = localStorage.getItem('dj_shek_stats');
 if (stats) {
 return JSON.parse(stats);
 }
 return {
 visits: 0,
 downloads: 0,
 lastVisit: null
 };
 }

 // Fonction pour sauvegarder les statistiques
 function saveStats(stats) {
 localStorage.setItem('dj_shek_stats', JSON.stringify(stats));
 updateStatsDisplay(stats);
 }

 // Fonction pour mettre à jour l'affichage des statistiques
 function updateStatsDisplay(stats) {
 const visitsCount = document.getElementById('visitsCount');
 const downloadsCount = document.getElementById('downloadsCount');
 
 if (visitsCount) {
 visitsCount.textContent = formatNumber(stats.visits);
 }
 if (downloadsCount) {
 downloadsCount.textContent = formatNumber(stats.downloads);
 }
 }

 // Fonction pour formater les nombres (ajouter des séparateurs)
 function formatNumber(num) {
 return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
 }

 // Fonction pour tracker une visite
 function trackVisit() {
 const stats = getStats();
 const today = new Date().toDateString();
 
 // Compter une visite seulement si c'est une nouvelle session (pas de visite aujourd'hui)
 if (stats.lastVisit !== today) {
 stats.visits += 1;
 stats.lastVisit = today;
 saveStats(stats);
 
 // Envoyer les stats au serveur (optionnel)
 sendStatsToServer('visit', stats);
 }
 }

 // Fonction pour tracker un téléchargement
 function trackDownload() {
 const stats = getStats();
 stats.downloads += 1;
 saveStats(stats);
 
 // Envoyer les stats au serveur (optionnel)
 sendStatsToServer('download', stats);
 }

 // Fonction pour envoyer les stats au serveur (optionnel - peut être désactivé)
 function sendStatsToServer(type, stats) {
 // Option 1: Utiliser Web3Forms pour envoyer les stats par email (désactivé par défaut)
 // Option 2: Utiliser une API personnalisée
 // Option 3: Ne rien faire (stats uniquement en local)
 
 // Pour activer l'envoi, décommentez le code ci-dessous et configurez votre endpoint
 /*
 try {
 fetch('https://votre-api.com/stats', {
 method: 'POST',
 headers: {
 'Content-Type': 'application/json',
 },
 body: JSON.stringify({
 type: type,
 visits: stats.visits,
 downloads: stats.downloads,
 timestamp: new Date().toISOString()
 })
 }).catch(err => {
 // Ignorer les erreurs silencieusement
 });
 } catch (e) {
 // Ignorer les erreurs silencieusement
 }
 */
 }

 // Initialiser le tracking au chargement de la page
 document.addEventListener('DOMContentLoaded', function() {
 // Charger et afficher les stats existantes
 const stats = getStats();
 updateStatsDisplay(stats);
 
 // Tracker la visite
 trackVisit();
 });
 </script>

    <!-- Vercel Analytics -->
    <!-- 
        Vercel Analytics est automatiquement activé pour les sites déployés sur Vercel.
        Aucune configuration supplémentaire n'est nécessaire.
        Les données sont disponibles dans le Dashboard Vercel > Analytics.
        
        Note: Pour les sites statiques (comme celui-ci), Vercel Analytics fonctionne
        automatiquement sans besoin d'importer le package npm.
        
        Si vous voulez utiliser le package @vercel/analytics dans un projet Next.js,
        utilisez: import { Analytics } from "@vercel/analytics/react"
    -->
    <script>
        // Vercel Analytics - Activation automatique
        // Pour les sites statiques, Vercel injecte automatiquement le script Analytics
        // lors du déploiement. Ce script est optionnel et sert uniquement à vérifier
        // que nous sommes sur Vercel.
        
        (function() {
            // Détecter si on est sur Vercel
            const isVercel = window.location.hostname.includes('vercel.app') || 
                           window.location.hostname.includes('djshekofficiel.com');
            
            if (isVercel && typeof window !== 'undefined') {
                // Vercel Analytics est automatiquement injecté par Vercel
                // Vous pouvez vérifier dans le Dashboard Vercel > Analytics
                // Les métriques incluent : visites, Core Web Vitals, erreurs, etc.
                
                // Optionnel : Log pour debug (retirer en production)
                if (window.location.hostname.includes('localhost') || 
                    window.location.hostname.includes('127.0.0.1')) {
                    console.log('Vercel Analytics: Mode développement local');
                }
            }
        })();
    </script>

