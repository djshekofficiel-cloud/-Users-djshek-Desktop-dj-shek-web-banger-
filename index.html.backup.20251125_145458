 <script>

 // Désactiver la toolbar Vercel
 (function() {
 // Masquer la toolbar Vercel si elle existe
 const hideVercelToolbar = function() {
 const toolbar = document.querySelector('[data-vercel-toolbar]') || 
 document.querySelector('#vercel-toolbar') ||
 document.querySelector('.vercel-toolbar') ||
 document.querySelector('[class*="vercel"]');
 if (toolbar) {
 toolbar.style.display = 'none';
 toolbar.remove();
 }
 };
 
 // Essayer immédiatement
 hideVercelToolbar();
 
 // Essayer après le chargement
 if (document.readyState === 'loading') {
 document.addEventListener('DOMContentLoaded', hideVercelToolbar);
 }
 
 // Observer pour les éléments ajoutés dynamiquement
 const observer = new MutationObserver(hideVercelToolbar);
 observer.observe(document.body, { childList: true, subtree: true });
 
 // Essayer périodiquement
 setInterval(hideVercelToolbar, 1000);
 })();

 // Custom Cursor - Désactivé (curseur normal restauré)
 // Le curseur personnalisé a été désactivé pour utiliser le curseur système par défaut

 // Particles

 const particlesBg = document.getElementById('particlesBg');

 if (particlesBg) {
 // Adapter le nombre de particules selon la taille d'écran
 const isMobile = window.innerWidth <= 768;
 const particleCount = isMobile ? 60 : 100;

 for (let i = 0; i < particleCount; i++) {

 const particle = document.createElement('div');

 particle.classList.add('particle');

 particle.style.left = Math.random() * 100 + '%';

 particle.style.setProperty('--drift', (Math.random() * 200 - 100) + 'px');

 particle.style.animationDelay = Math.random() * 15 + 's';

 particle.style.animationDuration = (Math.random() * 10 + 10) + 's';

 particlesBg.appendChild(particle);

 }
 }

 // Scroll Progress

 window.addEventListener('scroll', () => {

 const scrollProgress = document.getElementById('scrollProgress');

 const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

 const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;

 const progress = (scrollTop / scrollHeight) * 100;

 scrollProgress.style.width = progress + '%';

 // Navbar scroll effect

 const navbar = document.getElementById('navbar');

 if (scrollTop > 100) {

 navbar.classList.add('scrolled');

 } else {

 navbar.classList.remove('scrolled');

 }

 });

 // Timeline Animation on Scroll

 const timelineItems = document.querySelectorAll('.timeline-item');

 const observerOptions = {

 threshold: 0.3

 };

 const observer = new IntersectionObserver((entries) => {

 entries.forEach(entry => {

 if (entry.isIntersecting) {

 entry.target.classList.add('visible');

 }

 });

 }, observerOptions);

 timelineItems.forEach(item => observer.observe(item));

 // Hover effects - Désactivés (curseur personnalisé désactivé)

 // Smooth scroll for nav links

 document.querySelectorAll('a[href^="#"]').forEach(anchor => {

 anchor.addEventListener('click', function (e) {

 const href = this.getAttribute('href');

 // Vérifier que le href n'est pas juste "#"

 if (href && href !== '#' && href.length > 1) {

 e.preventDefault();

 const target = document.querySelector(href);

 if (target) {

 target.scrollIntoView({

 behavior: 'smooth',

 block: 'start'

 });

 // Close mobile menu if open

 const navMenu = document.getElementById('navMenu');

 const navToggle = document.getElementById('navMenuToggle');

 if (navMenu && navMenu.classList.contains('active')) {

 navMenu.classList.remove('active');

 if (navToggle) {

 navToggle.classList.remove('active');

 }

 }

 }

 }

 });

 });

 // Mobile Menu Toggle

 const navMenuToggle = document.getElementById('navMenuToggle');

 const navMenu = document.getElementById('navMenu');

 if (navMenuToggle && navMenu) {

 navMenuToggle.addEventListener('click', function() {

 navMenu.classList.toggle('active');

 navMenuToggle.classList.toggle('active');

 });

 // Close menu when clicking outside

 document.addEventListener('click', function(e) {

 if (!navMenu.contains(e.target) && !navMenuToggle.contains(e.target)) {

 navMenu.classList.remove('active');

 navMenuToggle.classList.remove('active');

 }

 });

 }

 </script>

 <script>

 // Initialize Audio Multimedia Player

 // Mode debug (false en production)
 const DEBUG = false;
 const log = DEBUG ? console.log.bind(console) : () => {};

 // ============================================
 // FONCTIONS DE SÉCURITÉ
 // ============================================

 // Sanitizer HTML pour éviter les attaques XSS
 function escapeHtml(text) {
 if (typeof text !== 'string') return '';
 const map = {
 '&': '&amp;',
 '<': '&lt;',
 '>': '&gt;',
 '"': '&quot;',
 "'": '&#039;',
 '/': '&#x2F;'
 };
 return text.replace(/[&<>"'/]/g, function(m) { return map[m]; });
 }

 // Sanitizer pour les attributs HTML
 function escapeHtmlAttribute(text) {
 if (typeof text !== 'string') return '';
 return escapeHtml(text).replace(/'/g, '&#x27;');
 }

 // Validation stricte des emails
 function isValidEmailStrict(email) {
 if (!email || typeof email !== 'string') return false;
 // Regex plus stricte
 const emailRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/;
 if (!emailRegex.test(email)) return false;
 // Vérifier la longueur
 if (email.length > 254) return false;
 // Vérifier qu'il n'y a pas de caractères dangereux
 if (/[<>\"']/.test(email)) return false;
 return true;
 }

 // Validation et sanitization des noms
 function sanitizeName(name) {
 if (!name || typeof name !== 'string') return '';
 // Enlever les caractères dangereux, garder seulement lettres, espaces, tirets, apostrophes
 return name.trim().replace(/[^a-zA-ZÀ-ÿ\s\-']/g, '').substring(0, 100);
 }

 // Validation et sanitization des messages
 function sanitizeMessage(message) {
 if (!message || typeof message !== 'string') return '';
 // Enlever les balises HTML et scripts
 return message.trim()
 .replace(/<script\b[^<]*(?:(?!<\/script>)<[^<]*)*<\/script>/gi, '')
 .replace(/<[^>]+>/g, '')
 .substring(0, 5000);
 }

 // Rate limiting côté client (basique)
 const rateLimitStore = {
 submissions: [],
 maxSubmissions: 5,
 timeWindow: 60000 // 1 minute
 };

 function checkRateLimit() {
 const now = Date.now();
 // Nettoyer les anciennes soumissions
 rateLimitStore.submissions = rateLimitStore.submissions.filter(
 time => now - time < rateLimitStore.timeWindow
 );
 // Vérifier la limite
 if (rateLimitStore.submissions.length >= rateLimitStore.maxSubmissions) {
 return false;
 }
 // Ajouter la soumission actuelle
 rateLimitStore.submissions.push(now);
 return true;
 }

 // Protection CSRF (token simple)
 function generateCSRFToken() {
 return Math.random().toString(36).substring(2, 15) + Math.random().toString(36).substring(2, 15);
 }

 // Validation de l'URL pour éviter les redirections malveillantes
 function isValidUrl(url) {
 if (!url || typeof url !== 'string') return false;
 try {
 const parsed = new URL(url);
 // Autoriser seulement HTTPS (sauf localhost pour dev)
 return (parsed.protocol === 'https:' || parsed.hostname === 'localhost' || parsed.hostname === '127.0.0.1');
 } catch (e) {
 return false;
 }
 }

 // Protection contre les injections dans les noms de fichiers
 function sanitizeFileName(fileName) {
 if (!fileName || typeof fileName !== 'string') return '';
 // Enlever les caractères dangereux
 return fileName.replace(/[^a-zA-Z0-9._\-\s]/g, '').substring(0, 255);
 }

 // Fonction pour masquer le loader de manière fiable
 function hidePageLoader() {
 const pageLoader = document.getElementById('pageLoader');
 if (pageLoader) {
 pageLoader.classList.add('hidden');
 setTimeout(() => {
 pageLoader.style.display = 'none';
 pageLoader.style.visibility = 'hidden';
 pageLoader.style.opacity = '0';
 }, 500);
 }
 }

 // Masquer le loader une fois la page chargée - Multiple fallbacks
 // 1. DOMContentLoaded (rapide)
 document.addEventListener('DOMContentLoaded', function() {
 setTimeout(hidePageLoader, 500);
 });

 // 2. Window load (complet)
 window.addEventListener('load', function() {
 setTimeout(hidePageLoader, 300);
 });

 // 3. Fallback après 3 secondes maximum
 setTimeout(function() {
 hidePageLoader();
 }, 3000);

 window.addEventListener('DOMContentLoaded', function() {

 log('Initialisation du lecteur audio multimédia...');

 try {

 initAudioMultimediaPlayer();

 log('Lecteur audio multimédia initialisé avec succès');

 } catch (error) {

 console.error('Erreur lors de l\'initialisation du lecteur audio:', error);

 }

 // Système d'envoi d'emails via API Vercel (Web3Forms)
 log('Système d\'envoi d\'emails prêt');

 });

 // Audio Multimedia Player

 // Fonction pour afficher les erreurs audio
 function showAudioError(message) {
 // Créer ou récupérer la notification
 let errorNotification = document.getElementById('audioErrorNotification');
 
 if (!errorNotification) {
 errorNotification = document.createElement('div');
 errorNotification.id = 'audioErrorNotification';
 errorNotification.className = 'audio-error-notification';
 document.body.appendChild(errorNotification);
 }
 
 errorNotification.textContent = message;
 errorNotification.classList.add('active');
 
 // Masquer après 5 secondes
 setTimeout(() => {
 errorNotification.classList.remove('active');
 }, 5000);
 }

 function initAudioMultimediaPlayer() {

 const audioElement = document.getElementById('audioPlayerElement');

 const playPauseBtn = document.getElementById('audioPlayPauseBtn');

 const prevBtn = document.getElementById('audioPrevBtn');

 const nextBtn = document.getElementById('audioNextBtn');

 const progressContainer = document.getElementById('audioProgressContainer');

 const progressBar = document.getElementById('audioProgressBar');

 const currentTimeDisplay = document.getElementById('audioCurrentTime');

 const durationDisplay = document.getElementById('audioDuration');

 const currentTrackDisplay = document.getElementById('audioCurrentTrack');

 const currentArtistDisplay = document.getElementById('audioCurrentArtist');

 const volumeContainer = document.getElementById('audioVolumeContainer');

 const volumeBar = document.getElementById('audioVolumeBar');

 const playlistContainer = document.getElementById('audioPlaylist');

 // Vérifier que tous les éléments existent

 if (!audioElement || !playPauseBtn || !playlistContainer) {

 console.error('Éléments audio manquants:', {

 audioElement: !!audioElement,

 playPauseBtn: !!playPauseBtn,

 playlistContainer: !!playlistContainer

 });

 return;

 }

 // List of all audio files

                         const audioTracks = [
                { name: 'DJ SHEK - Aya Nakamura ( Comportement Remix ) Prodshek', file: 'DJ SHEK - Aya Nakamura ( Comportement Remix ) Prodshek .mp3' }
                ,{ name: 'DJ SHEK - Aya Nakamura - Desarmer Remix shek prod', file: 'DJ SHEK - Aya Nakamura - Desarmer Remix shek prod .mp3' }
                ,{ name: 'DJ SHEK - Intro  90s KYBBA', file: 'DJ SHEK - Intro  90s KYBBA .mp3' }
                ,{ name: 'DJ SHEK - Intro  Jaden Bojsen', file: 'DJ SHEK - Intro  Jaden Bojsen .mp3' }
                ,{ name: 'DJ SHEK - Intro -SHALLIPOPI -Laho', file: 'DJ SHEK - Intro -SHALLIPOPI -Laho  .mp3' }
                ,{ name: 'DJ SHEK - Intro Boulbi - BOOBA', file: 'DJ SHEK - Intro Boulbi - BOOBA  .mp3' }
                ,{ name: 'DJ SHEK - Intro Carmen - Time To Move', file: 'DJ SHEK - Intro Carmen - Time To Move  .mp3' }
                ,{ name: 'DJ SHEK - Intro x  Werenoi Ft. GIMS - Piano', file: 'DJ SHEK - Intro x  Werenoi Ft. GIMS - Piano .mp3' }
                ,{ name: 'DJ SHEK - La Capuche -  TOURELLE CHARGER', file: 'DJ SHEK - La Capuche -  TOURELLE CHARGER .mp3' }
                ,{ name: 'DJ SHEK - OXYGENE 2025', file: 'DJ SHEK - OXYGENE 2025 .mp3' }
                ,{ name: 'DJ SHEK - PARISIENNE GIMS  ( INTRO  )', file: 'DJ SHEK - PARISIENNE GIMS  ( INTRO  ) .mp3' }
                ,{ name: 'DJ SHEK - Rk Top Boy Afroremix Shekprod', file: 'DJ SHEK - Rk Top Boy Afroremix Shekprod .mp3' }
                ,{ name: 'DJ SHEK - Tk - Dans La Gova  Remix ProdShek', file: 'DJ SHEK - Tk - Dans La Gova  Remix ProdShek .mp3' }
                ,{ name: 'DJ SHEK GIMS GARANTIE Feat la rafleuze News Banger', file: 'DJ SHEK GIMS GARANTIE Feat la rafleuze News Banger .mp3' }
                ,{ name: 'DJ SHEK x RK (ft. Genezio)  VIANO  (  shatta )', file: 'DJ SHEK x RK (ft. Genezio)  VIANO  (  shatta )  .mp3' }
                ,{ name: 'DJ Shek -   Chambre 04 x Vay', file: 'DJ Shek -   Chambre 04 x Vay   .mp3' }
                ,{ name: 'DJ Shek -  Ciel  X MC Menor', file: 'DJ Shek -  Ciel  X MC Menor .mp3' }
                ,{ name: 'DJ Shek -  Intro edit  NINAO', file: 'DJ Shek -  Intro edit  NINAO  .mp3' }
                ,{ name: 'DJ Shek - ( Gims Ciel edit shek  )', file: 'DJ Shek - ( Gims Ciel edit shek  ).mp3' }
                ,{ name: 'DJ Shek - Temple of Sound', file: 'DJ Shek - Temple of Sound .mp3' }
                ,{ name: 'DJSHEK  x Guy2Bezbar - Big mama Remix', file: 'DJSHEK  x Guy2Bezbar - Big mama Remix .mp3' }
                ,{ name: 'DJSHEK Génération impolie Remix House', file: 'DJSHEK Génération impolie Remix House  .mp3' }
                ,{ name: 'DJSHEK X DYSTINCT - YAMA  Remix', file: 'DJSHEK X DYSTINCT - YAMA  Remix  .mp3' }
                ,{ name: 'Dj Shek  x Karris - Hotel Room', file: 'Dj Shek  x Karris - Hotel Room .mp3' }
                ,{ name: 'Dj Shek  x Shattiment x Apaga el cel', file: 'Dj Shek  x Shattiment x Apaga el cel .mp3' }
                ,{ name: 'Dj Shek  x Tocatoca Feat Y a une Meuf', file: 'Dj Shek  x Tocatoca Feat Y a une Meuf  .mp3' }
                ,{ name: 'Dj Shek - Montoya X  il est Marié', file: 'Dj Shek - Montoya X  il est Marié  .mp3' }
            ];

 let currentTrackIndex = -1;

 let isPlaying = false;

 // Format time

 function formatTime(seconds) {

 if (isNaN(seconds)) return '0:00';

 const mins = Math.floor(seconds / 60);

 const secs = Math.floor(seconds % 60);

 return `${mins}:${secs.toString().padStart(2, '0')}`;

 }

 // Update progress

 function updateProgress() {

 if (audioElement.duration) {

 const progress = (audioElement.currentTime / audioElement.duration) * 100;

 if (progressBar) {
 progressBar.style.width = progress + '%';
 }

 if (currentTimeDisplay) {
 currentTimeDisplay.textContent = formatTime(audioElement.currentTime);
 }

 }

 }

 // Load track

 function loadTrack(index) {

 if (index < 0 || index >= audioTracks.length) return;

 currentTrackIndex = index;

 const track = audioTracks[index];

 audioElement.src = `audio/${encodeURIComponent(track.file)}`;

 if (currentTrackDisplay) {
 currentTrackDisplay.textContent = track.name;
 }

 if (currentArtistDisplay) {
 currentArtistDisplay.textContent = 'DJ SHEK';
 }

 audioElement.load();

 updatePlaylistUI();

 }

 // Play/Pause

 function togglePlayPause() {

 if (currentTrackIndex === -1) {

 loadTrack(0);

 audioElement.play();

 isPlaying = true;

 playPauseBtn.textContent = '⏸';

 } else if (isPlaying) {

 audioElement.pause();

 isPlaying = false;

 playPauseBtn.textContent = '▶';

 } else {

 audioElement.play();

 isPlaying = true;

 playPauseBtn.textContent = '⏸';

 }

 }

 // Previous track

 function playPrevious() {

 if (currentTrackIndex > 0) {

 loadTrack(currentTrackIndex - 1);

 audioElement.play();

 isPlaying = true;

 playPauseBtn.textContent = '⏸';

 }

 }

 // Next track

 function playNext() {

 if (currentTrackIndex < audioTracks.length - 1) {

 loadTrack(currentTrackIndex + 1);

 audioElement.play();

 isPlaying = true;

 playPauseBtn.textContent = '⏸';

 }

 }

 // Update playlist UI

 function updatePlaylistUI() {

 const items = playlistContainer.querySelectorAll('.audio-playlist-item');

 items.forEach((item, index) => {

 item.classList.remove('active');

 if (index === currentTrackIndex) {

 item.classList.add('active');

 }

 });

 }

 // Create playlist

 log('Création de la playlist avec', audioTracks.length, 'pistes');

 log('playlistContainer:', playlistContainer);

 if (!playlistContainer) {

 console.error('playlistContainer est null!');

 return;

 }

 // Clear playlist first

 playlistContainer.innerHTML = '';

 audioTracks.forEach((track, index) => {

 const item = document.createElement('div');

 item.className = 'audio-playlist-item';

 // Échapper les caractères spéciaux pour le HTML et JavaScript

 const safeFileName = track.file.replace(/'/g, "\\'").replace(/"/g, '&quot;');

 const safeTrackName = track.name.replace(/'/g, "\\'").replace(/"/g, '&quot;');

 item.innerHTML = `

 <div class="audio-playlist-number">${String(index + 1).padStart(2, '0')}</div>

 <div class="audio-playlist-name">${track.name}</div>

 <div class="audio-playlist-duration">--:--</div>

 <button class="audio-playlist-download" onclick="event.stopPropagation(); downloadAudioTrack('${safeFileName}', '${safeTrackName}')" data-file="${safeFileName}" data-name="${safeTrackName}">⬇ Télécharger</button>

 `;

 // Rendre l'item focusable au clavier
 item.setAttribute('tabindex', '0');
 item.setAttribute('role', 'button');
 item.setAttribute('aria-label', `Lire ${track.name}`);

 item.addEventListener('click', (e) => {

 // Ne pas déclencher si on clique sur le bouton de téléchargement

 if (e.target.classList.contains('audio-playlist-download')) {

 return;

 }

 loadTrack(index);

 audioElement.play().catch(e => {

 console.error('Erreur de lecture:', e);

 });

 isPlaying = true;

 playPauseBtn.textContent = '⏸';

 });

 // Navigation clavier pour les items de playlist
 item.addEventListener('keydown', (e) => {
 if (e.key === 'Enter' || e.key === ' ') {
 e.preventDefault();
 loadTrack(index);
 audioElement.play().catch(e => {
 console.error('Erreur de lecture:', e);
 });
 isPlaying = true;
 playPauseBtn.textContent = '⏸';
 }
 });

 playlistContainer.appendChild(item);

 });

 log('Playlist créée avec succès,', playlistContainer.children.length, 'éléments ajoutés');

 // Event listeners

 playPauseBtn.addEventListener('click', togglePlayPause);
 prevBtn.addEventListener('click', playPrevious);
 nextBtn.addEventListener('click', playNext);

 // Navigation clavier pour les boutons audio
 playPauseBtn.addEventListener('keydown', (e) => {
 if (e.key === 'Enter' || e.key === ' ') {
 e.preventDefault();
 togglePlayPause();
 }
 });

 prevBtn.addEventListener('keydown', (e) => {
 if (e.key === 'Enter' || e.key === ' ') {
 e.preventDefault();
 playPrevious();
 }
 });

 nextBtn.addEventListener('keydown', (e) => {
 if (e.key === 'Enter' || e.key === ' ') {
 e.preventDefault();
 playNext();
 }
 });

 // Navigation clavier globale (raccourcis)
 document.addEventListener('keydown', (e) => {
 // Espace pour play/pause (si pas dans un input)
 if (e.key === ' ' && e.target.tagName !== 'INPUT' && e.target.tagName !== 'TEXTAREA') {
 e.preventDefault();
 if (audioElement && currentTrackIndex >= 0) {
 togglePlayPause();
 }
 }
 // Flèches gauche/droite pour navigation (si pas dans un input)
 if ((e.key === 'ArrowLeft' || e.key === 'ArrowRight') && 
 e.target.tagName !== 'INPUT' && e.target.tagName !== 'TEXTAREA') {
 e.preventDefault();
 if (e.key === 'ArrowLeft') {
 playPrevious();
 } else {
 playNext();
 }
 }
 });

 // Progress bar click

 progressContainer.addEventListener('click', (e) => {

 if (audioElement.duration) {

 const rect = progressContainer.getBoundingClientRect();

 const clickX = e.clientX - rect.left;

 const width = rect.width;

 const percentage = clickX / width;

 audioElement.currentTime = percentage * audioElement.duration;

 }

 });

 // Volume control

 volumeContainer.addEventListener('click', (e) => {

 const rect = volumeContainer.getBoundingClientRect();

 const clickX = e.clientX - rect.left;

 const width = rect.width;

 const volume = Math.max(0, Math.min(1, clickX / width));

 audioElement.volume = volume;

 if (volumeBar) {
 volumeBar.style.width = (volume * 100) + '%';
 }

 });

 // Audio events

 audioElement.addEventListener('loadedmetadata', () => {

 if (durationDisplay) {
 durationDisplay.textContent = formatTime(audioElement.duration);
 }

 });

 audioElement.addEventListener('timeupdate', updateProgress);

 audioElement.addEventListener('ended', () => {

 isPlaying = false;

 playPauseBtn.textContent = '▶';

 playNext();

 });

 // Gestion d'erreurs audio
 audioElement.addEventListener('error', (e) => {
 const error = audioElement.error;
 let message = 'Erreur de chargement audio';
 
 if (error) {
 switch(error.code) {
 case error.MEDIA_ERR_ABORTED:
 message = 'Lecture interrompue';
 break;
 case error.MEDIA_ERR_NETWORK:
 message = 'Erreur réseau. Vérifiez votre connexion.';
 break;
 case error.MEDIA_ERR_DECODE:
 message = 'Erreur de décodage audio';
 break;
 case error.MEDIA_ERR_SRC_NOT_SUPPORTED:
 message = 'Format audio non supporté';
 break;
 }
 }
 
 // Afficher notification d'erreur
 showAudioError(message);
 
 // Passer à la piste suivante après 2 secondes
 setTimeout(() => {
 if (currentTrackIndex < audioTracks.length - 1) {
 playNext();
 }
 }, 2000);
 });

 // Set initial volume

 audioElement.volume = 0.7;

 if (volumeBar) {
 volumeBar.style.width = '70%';
 }

 }

 // Function to check if email is registered

 function isEmailRegistered() {

 // Vérifier si le questionnaire complet est rempli
 const questionnaireData = localStorage.getItem('djshek_questionnaire_completed');

 return questionnaireData !== null && questionnaireData !== '';

 }

 // Function to get registered email

 function getRegisteredEmail() {

 const data = localStorage.getItem('djshek_questionnaire_completed');
 if (data) {
 try {
 const parsed = JSON.parse(data);
 return parsed.email || '';
 } catch (e) {
 return '';
 }
 }
 return '';

 }
 
 // Function to get questionnaire data
 function getQuestionnaireData() {
 const data = localStorage.getItem('djshek_questionnaire_completed');
 if (data) {
 try {
 return JSON.parse(data);
 } catch (e) {
 return null;
 }
 }
 return null;
 }

 // Function to register questionnaire data
 function registerQuestionnaire(firstName, lastName, email, projectType, message) {

 if (validateEmail(email) && firstName && lastName && projectType) {

 const questionnaireData = {
 firstName: firstName,
 lastName: lastName,
 email: email,
 projectType: projectType,
 message: message || '',
 registeredDate: new Date().toISOString()
 };

 localStorage.setItem('djshek_questionnaire_completed', JSON.stringify(questionnaireData));
 localStorage.setItem('djshek_user_email', email); // Garder pour compatibilité

 return true;

 }

 return false;

 }
 
 // Function to get project type label
 function getProjectTypeLabel(value) {
 const labels = {
 'ghost-remix': 'Ghost Remix',
 'production': 'Production musicale',
 'mashup': 'Mashup',
 'intro': 'Intro pour événement',
 'projet-personnalise': 'Projet audio personnalisé',
 'devis': 'Demande de devis',
 'autre': 'Autre'
 };
 return labels[value] || value;
 }

 // Function to validate email

 function validateEmail(email) {

 const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

 return emailRegex.test(email);

 }

 // Function to show email modal

 function showEmailModal() {

 const modal = document.getElementById('emailModalOverlay');

 if (modal) {

 modal.classList.add('active');

 const emailInput = document.getElementById('emailInput');

 if (emailInput) {

 emailInput.focus();

 }

 }

 }

 // Function to close email modal

 function closeEmailModal() {

 const modal = document.getElementById('emailModalOverlay');

 if (modal) {

 modal.classList.remove('active');

 const form = document.getElementById('emailModalForm');

 if (form) {

 form.reset();

 }

 // Clear all errors
 const errorDivs = document.querySelectorAll('.email-modal-error');
 errorDivs.forEach(div => {
 div.textContent = '';
 div.classList.remove('active');
 });
 
 // Re-enable submit button
 const submitBtn = form ? form.querySelector('button[type="submit"]') : null;
 if (submitBtn) {
 submitBtn.disabled = false;
 submitBtn.textContent = 'Valider et accéder aux téléchargements';
 }

 }

 }

 // Function to download audio track

 function downloadAudioTrack(fileName, trackName) {

 // Check if questionnaire is registered

 if (!isEmailRegistered()) {

 // Show email registration modal

 showEmailModal();

 // Store the download info for after registration

 sessionStorage.setItem('pending_download_file', fileName);

 sessionStorage.setItem('pending_download_name', trackName);

 return;

 }

 // Proceed with download directly

 performDownload(fileName, trackName);

 }

 // Function to update all download buttons after questionnaire is completed
 function updateDownloadButtons() {
 const downloadButtons = document.querySelectorAll('.audio-playlist-download');
 downloadButtons.forEach(button => {
 const fileName = button.getAttribute('data-file');
 const trackName = button.getAttribute('data-name');
 if (fileName && trackName) {
 // Remplacer l'action pour télécharger directement
 button.setAttribute('onclick', `event.stopPropagation(); performDownload('${fileName.replace(/'/g, "\\'")}', '${trackName.replace(/'/g, "\\'")}')`);
 }
 });
 }
 
 // Check on page load if questionnaire is already completed
 document.addEventListener('DOMContentLoaded', function() {
 // Attendre que la playlist soit créée
 setTimeout(function() {
 if (isEmailRegistered()) {
 updateDownloadButtons();
 }
 }, 1000);
 });

 // Function to perform the actual download

 function performDownload(fileName, trackName) {

 const audioUrl = `audio/${encodeURIComponent(fileName)}`;

 // Create a temporary anchor element to trigger download

 const link = document.createElement('a');

 link.href = audioUrl;

 link.download = trackName + '.mp3';

 link.style.display = 'none';

 // Add to body, click, and remove

 document.body.appendChild(link);

 link.click();

 document.body.removeChild(link);

 log('Téléchargement de:', trackName, 'par:', getRegisteredEmail());

            // Tracker le téléchargement avec le système amélioré
            trackDownload(fileName, trackName);
 }

 // Handle questionnaire form submission

 document.addEventListener('DOMContentLoaded', function() {

 const emailForm = document.getElementById('emailModalForm');

 if (emailForm) {

 emailForm.addEventListener('submit', function(e) {

 e.preventDefault();

 // Clear all errors
 const errorDivs = document.querySelectorAll('.email-modal-error');
 errorDivs.forEach(div => {
 div.textContent = '';
 div.classList.remove('active');
 });

 // Get form values
 const firstNameInput = document.getElementById('exclusivityFirstName');
 const lastNameInput = document.getElementById('exclusivityLastName');
 const emailInput = document.getElementById('emailInput');
 const projectTypeInput = document.getElementById('exclusivityProjectType');
 const messageInput = document.getElementById('exclusivityMessage');

 if (!firstNameInput || !lastNameInput || !emailInput || !projectTypeInput) {
 console.error('Form elements not found');
 return;
 }

 const firstName = firstNameInput.value.trim();
 const lastName = lastNameInput.value.trim();
 const email = emailInput.value.trim();
 const projectType = projectTypeInput.value;
 const message = messageInput.value.trim();

 // Validation
 let isValid = true;
 
 if (!firstName) {
 const errorDiv = document.getElementById('firstNameError');
 if (errorDiv) {
 errorDiv.textContent = 'Veuillez entrer votre prénom';
 errorDiv.classList.add('active');
 }
 isValid = false;
 }

 if (!lastName) {
 const errorDiv = document.getElementById('lastNameError');
 if (errorDiv) {
 errorDiv.textContent = 'Veuillez entrer votre nom';
 errorDiv.classList.add('active');
 }
 isValid = false;
 }

 if (!email) {
 const errorDiv = document.getElementById('emailError');
 if (errorDiv) {
 errorDiv.textContent = 'Veuillez entrer une adresse email';
 errorDiv.classList.add('active');
 }
 isValid = false;
 } else if (!validateEmail(email)) {
 const errorDiv = document.getElementById('emailError');
 if (errorDiv) {
 errorDiv.textContent = 'Veuillez entrer une adresse email valide';
 errorDiv.classList.add('active');
 }
 isValid = false;
 }

 if (!projectType) {
 const errorDiv = document.getElementById('projectTypeError');
 if (errorDiv) {
 errorDiv.textContent = 'Veuillez sélectionner un type de projet';
 errorDiv.classList.add('active');
 }
 isValid = false;
 }

 if (!isValid) {
 return;
 }

 // Show loading message
 const submitBtn = emailForm.querySelector('button[type="submit"]');
 const originalText = submitBtn ? submitBtn.textContent : '';
 if (submitBtn) {
 submitBtn.disabled = true;
 submitBtn.textContent = '⏳ Envoi en cours...';
 }

 // Envoyer les données via Web3Forms
 const formData = new FormData();
 formData.append('access_key', '4650301f-d665-4ddc-b4d3-9bbefff2e801');
 formData.append('subject', 'Nouveau questionnaire exclusivité - Accès téléchargements');
 formData.append('from_name', `${firstName} ${lastName}`);
 formData.append('email', email);
 formData.append('to_email', 'djshekofficiel@gmail.com');
 formData.append('name', `${firstName} ${lastName}`);
 formData.append('message', `Bonjour DJ SHEK,

Nouveau questionnaire exclusivité rempli pour accéder aux téléchargements.

---
INFORMATIONS
---
Nom : ${firstName} ${lastName}
Email : ${email}
Type de projet : ${getProjectTypeLabel(projectType)}
${message ? `Message : ${message}` : ''}

---
Date : ${new Date().toLocaleString('fr-FR')}
Envoyé depuis : djshekofficiel.com`);

 fetch('https://api.web3forms.com/submit', {
 method: 'POST',
 body: formData
 })
 .then(response => response.json())
 .then(data => {
 if (data.success) {
 // Register questionnaire data
 if (registerQuestionnaire(firstName, lastName, email, projectType, message)) {
 // Close modal
 closeEmailModal();

 // Mettre à jour tous les boutons de téléchargement pour qu'ils téléchargent directement
 updateDownloadButtons();

 // Check if there's a pending download
 const pendingFile = sessionStorage.getItem('pending_download_file');
 const pendingName = sessionStorage.getItem('pending_download_name');

 if (pendingFile && pendingName) {
 // Clear pending download
 sessionStorage.removeItem('pending_download_file');
 sessionStorage.removeItem('pending_download_name');

 // Perform the download
 performDownload(pendingFile, pendingName);
 }
 }
 } else {
 throw new Error(data.message || 'Erreur lors de l\'envoi');
 }
 })
 .catch(error => {
 console.error('Erreur envoi questionnaire:', error);
 // Enregistrer quand même localement pour permettre le téléchargement
 if (registerQuestionnaire(firstName, lastName, email, projectType, message)) {
 closeEmailModal();
 
 // Mettre à jour tous les boutons de téléchargement
 updateDownloadButtons();
 
 const pendingFile = sessionStorage.getItem('pending_download_file');
 const pendingName = sessionStorage.getItem('pending_download_name');
 if (pendingFile && pendingName) {
 sessionStorage.removeItem('pending_download_file');
 sessionStorage.removeItem('pending_download_name');
 performDownload(pendingFile, pendingName);
 }
 } else {
 const errorDiv = document.getElementById('emailError');
 if (errorDiv) {
 errorDiv.textContent = 'Erreur lors de l\'envoi. Veuillez réessayer.';
 errorDiv.classList.add('active');
 }
 if (submitBtn) {
 submitBtn.disabled = false;
 submitBtn.textContent = originalText;
 }
 }
 });
 });

 }

 // Close modal when clicking outside

 const modalOverlay = document.getElementById('emailModalOverlay');

 if (modalOverlay) {

 modalOverlay.addEventListener('click', function(e) {

 if (e.target === modalOverlay) {

 closeEmailModal();

 }

 });

 }

 });

 // Function to load SoundCloud tracks from RSS feed

 async function loadSoundCloudTracks() {

 const tracksList = document.getElementById('soundcloudTracksList');

 const tracksLoading = document.getElementById('tracksLoading');

 const tracksError = document.getElementById('tracksError');

 const tracksCount = document.getElementById('tracksCount');

 try {

 // Fetch RSS feed from SoundCloud

 const rssUrl = 'https://feeds.soundcloud.com/users/soundcloud:users:1374364729/sounds.rss';

 // Use a CORS proxy to fetch the RSS feed

 const proxyUrl = `https://api.allorigins.win/get?url=${encodeURIComponent(rssUrl)}`;

 const response = await fetch(proxyUrl);

 const data = await response.json();

 // Parse RSS XML

 const parser = new DOMParser();

 const xmlDoc = parser.parseFromString(data.contents, 'text/xml');

 const items = xmlDoc.querySelectorAll('item');

 if (items.length > 0) {

 tracksLoading.style.display = 'none';

 tracksList.style.display = 'grid';

 tracksCount.textContent = `${items.length} pistes`;

 items.forEach((item, index) => {

 const title = item.querySelector('title')?.textContent || 'Titre inconnu';

 const link = item.querySelector('link')?.textContent || '#';

 const pubDate = item.querySelector('pubDate')?.textContent || '';

 const description = item.querySelector('description')?.textContent || '';

 // Extract duration if available in description

 const durationMatch = description.match(/(\d+):(\d+)/);

 const duration = durationMatch ? durationMatch[0] : '';

 // Add to SoundCloud tracks list

 const trackItem = document.createElement('div');

 trackItem.className = 'soundcloud-track-item';

 trackItem.innerHTML = `

 <div class="soundcloud-track-number">${String(index + 1).padStart(2, '0')}</div>

 <div class="soundcloud-track-name">${title}</div>

 <div class="soundcloud-track-meta">${duration ? duration + ' • ' : ''}SoundCloud</div>

 <div class="soundcloud-track-play-btn">▶</div>

 `;

 trackItem.setAttribute('data-url', link);

 trackItem.addEventListener('click', () => {

 playSoundCloudTrack(link, title);

 });

 tracksList.appendChild(trackItem);

 });

 } else {

 tracksLoading.style.display = 'none';

 tracksError.style.display = 'block';

 tracksError.textContent = 'Aucune piste trouvée dans le flux RSS.';

 }

 } catch (error) {

 console.error('Error loading SoundCloud tracks:', error);

 tracksLoading.style.display = 'none';

 tracksError.style.display = 'block';

 tracksError.textContent = 'Erreur lors du chargement des pistes. Veuillez réessayer plus tard.';

 }

 }

